from django.db import models
class user ():
  def __init__(self, username, password, admin_status, firstname, lastname, location, ):
		self.username = username
		self.password = password
		self.admin_status = admin_status
		self.firstname = firstname
		self.lastname = lastname
		self.location = location
		self.init_role = initiator()
		self.back_role = backer()
	def getUsername():
		return self.username
	def getPassword():
		return self.password
	def getAdminStatus():
		return self.admin_status
	def getFirstName():
		return self.firstname
	def getLastName():
		return self.lastname
	def getLocation():
		return self.location
	def getInitRole:
		return self.init_role
	def getBackRole:
		return self.back_role
	def setUsername(new_name):
		self.username = new_name
	def setPassword(new_password):
		self.password = new_password
	def setAdminStatus(new_status):
		self.admin_status = new_status
	def setFirstName(new_fname):
		self.firstname = new_fname
	def setLastName(new_lname):
		self.lastname = new_lname
	def setLocation(new_location):
		self.location = new_location

class initiator():
	def __init__():
		self.init_projects = []
		self.ratings = []
		self.communities = []
	def createProject(pname, description, goal):
		newproject = initiative(pname, description, goal)
		self.init_projects.apppend(newproject)
	def getProjects():
		return self.init_projects
	def getRating():
		if (len(self.ratings) == 0):
			return -1
		return sum(self.ratings)/float(len(self.ratings)) 
	def getCommunities():
		return self.communities


class backer():
	pass

class community():
	pass

class initiative():
	def __init__ (pname, description, goal):
		self.name = pname
		self.description = description
		self.goal = goal
